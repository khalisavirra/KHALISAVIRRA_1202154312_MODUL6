<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:gravity="center_horizontal"
    android:background="@drawable/ig_wallpaper"
    tools:context="com.example.khalisavirra.khalisavirra_1202154312_modul6.PostPoto">

    <ImageView
        android:id="@+id/gambardiupload"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/yangaplod" />

    <Button
        android:id="@+id/choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gambardiupload"
        android:layout_centerHorizontal="true"
        android:text="choose" />

    <EditText
        android:id="@+id/bikinposttitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/choose"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Title"
        android:inputType="textShortMessage|textLongMessage|textPersonName" />

    <EditText
        android:id="@+id/bikinpostcaption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/bikinposttitle"
        android:layout_marginEnd="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="13dp"
        android:ems="10"
        android:hint="Write your post ..."
        android:inputType="textShortMessage|textLongMessage|textPersonName" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:onClick="uploadingambar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/bikinpostcaption"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/bikinpostcaption"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:clickable="true"
        android:tint="@android:color/white"
        app:backgroundTint="@color/colorPrimary"
        app:srcCompat="@drawable/ic_check"
        tools:ignore="VectorDrawableCompat" />

</RelativeLayout>
