<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="2.5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_centerVertical="true"
        android:id="@+id/image_komen"
        android:src="@drawable/ic_person_add"
        android:tint="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_toRightOf="@id/image_komen"
        android:id="@+id/user_komentar"
        android:textColor="@color/colorPrimary"
        android:text="Nama user komentar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_toRightOf="@id/image_komen"
        android:layout_below="@id/user_komentar"
        android:id="@+id/isi_komentar"
        android:text="Isi komentar"
        android:ellipsize="end"
        android:maxLines="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>